{
  "compilerOptions": {
    "target": "es2022", // 최소 ES2022 이상으로 설정
    "module": "NodeNext", // ESNext 모듈 시스템 사용
    "moduleResolution": "nodenext", // Node.js 스타일 모듈 해석
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "allowImportingTsExtensions": true, // .ts 확장자 파일을 import할 수 있도록 허용
    "noEmit": true, // 파일을 출력하지 않음
  }
}
// 